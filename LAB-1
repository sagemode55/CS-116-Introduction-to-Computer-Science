//this little program converts from pound to kilograms
//your name
//your section number
//lap 1
#include <iostream>
#include <string>
using namespace std;
int main()
{
	string name;
	double pound, kg;
	cout << "what is your name (first name only):";
	cin >> name;
	cout << "How many pound do you weigh?";
	cin >> pound;
	kg = pound / 2.205;
	cout << name << ", you weigh" << kg << endl;
	system("pause");
	return 0;
}


